<Window x:Class="ProtocolTemplateRedactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProtocolTemplateRedactor"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="368*"/>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabControl"  Margin="0" Grid.ColumnSpan="2">
            <TabItem Header="Общая информация" RenderTransformOrigin="6.895,10.883">
                <Grid Background="#FFE5E5E5" Margin="0,-3,0,3">
                    <TextBox x:Name="textBoxName" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Margin="0, 0, 0, 80" Width="300" Height="20" TextWrapping="Wrap" Text="Название"/>
                    <TextBox x:Name="textBoxId" Text="Идентификатор" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0, 0, 0, 30" TextWrapping="Wrap" Width="300" Height="20"  TextChanged="textBox_TextChanged">
                        <!--      <TextBox.Header>
                <TextBlock  Text="Header" Foreground="red" FontFamily="Times New Roman"></TextBlock>
            </TextBox.Header>
        -->
                    </TextBox>
                    <TextBlock x:Name="textBlockIdHint" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0, 30, 0, 0" TextWrapping="Wrap" Width="300" Height="40" Text="Идентификатор - это слово, состоящее из латинских букв и цифр"/>
                    <Button x:Name="buttonSave" Content="Сохранить" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0, 200,100,0" Width="75" Height="20"/>
                    <Button x:Name="buttonLoad" Content="Загрузить" HorizontalAlignment="Stretch" Margin="100,200,0,0" VerticalAlignment="Stretch" Width="75" Height="20"/>
                </Grid>
            </TabItem>
            <TabItem Header="Редактирование">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="82*"/>
                        <ColumnDefinition Width="327*"/>
                        <ColumnDefinition Width="102*"/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="listView" Margin="0" Grid.ColumnSpan="2">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <GroupBox x:Name="groupBox" Header="Свойства" Margin="0" Grid.Column="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Предпросмотр">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
            <TabItem Header="Образец протокола">
                <Grid Background="#FFE5E5E5">
                    <WebBrowser x:Name="Browser" Source="https://www.yandex.ru"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
