<Window x:Class="UltrasoundProtocols.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ultrasound Protocols" Height="200" Width="400"
        MinWidth="400"
        MinHeight="200"
        MaxHeight="200" Loaded="Window_Loaded" Closing="Window_Closing" ResizeMode="CanMinimize">

    <Grid Height="170" VerticalAlignment="Top" Margin="0,0,0,0">
        <Label Content="Имя пользователя" Margin="10,15,249.817,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <Label Content="Пароль" Margin="0,50,250.27,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="133.73" HorizontalContentAlignment="Right"/>
        <Label Content="Имя сервера" HorizontalAlignment="Right" Margin="0,90,249,0" VerticalAlignment="Top" Width="135" HorizontalContentAlignment="Right"/>
        <TextBox x:Name="LoginBox" HorizontalAlignment="Stretch" Height="23" Margin="150,15,20,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Stretch" Height="23" Margin="150,50,20,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ServerBox" HorizontalAlignment="Stretch" Height="23" Margin="150,90,20,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Войти" Margin="100,130,100,0" VerticalAlignment="Top" Click="Button_Click" IsDefault="True"/>
    </Grid>
</Window>
