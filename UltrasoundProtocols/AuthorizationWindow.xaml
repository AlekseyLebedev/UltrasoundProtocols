<Window x:Class="UltrasoundProtocols.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AuthorizationWindow" Height="200" Width="300"
        MinWidth="200"
        MinHeight="200"
        MaxHeight="200" Loaded="Window_Loaded" Closing="Window_Closing">

    <Grid Height="170" VerticalAlignment="Top" Margin="0,0,0,0">
        <Label Content="Login" HorizontalAlignment="Left" Margin="60,15,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="40,50,0,0" VerticalAlignment="Top"/>
        <Label Content="Server name" HorizontalAlignment="Left" Margin="25,90,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="LoginBox" HorizontalAlignment="Stretch" Height="23" Margin="100,15,20,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Stretch" Height="23" Margin="100,50,20,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ServerBox" HorizontalAlignment="Stretch" Height="23" Margin="100,90,20,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="100,130,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" IsDefault="True"/>
    </Grid>
</Window>
