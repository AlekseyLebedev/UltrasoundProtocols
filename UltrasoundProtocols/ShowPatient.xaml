                 TextAlignment="Center"
                 Height="30" Margin="180,210,0,0" 
                 TextWrapping="Wrap" 
                 Text="000000000" 
                 VerticalAlignment="Top" Width="180"/>
        <TextBlock Name="AmbulatorCardTextBlock" 
                 TextAlignment="Center"
                 HorizontalAlignment="Left" 
