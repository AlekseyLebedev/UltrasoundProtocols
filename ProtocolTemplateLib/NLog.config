<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="%TEMP%\nlog-internal.log">
  <targets>
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
                archiveFileName="${basedir}/archives/log.{#}.txt"
                archiveEvery="Month"
                archiveNumbering="Rolling"
                maxArchiveFiles="5"/>
    <target xsi:type="MessageBox" name="errs" caption="Ошибка в бибилотеке UltrasoundProtocols" layout="Сообщите об этом разработчикам. ${uppercase:${level}} ${message}"/>
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="f" />
    <logger name="*" minlevel="Fatal" writeTo="errs" />
  </rules>
</nlog>
